<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<form class="form-horizontal", role="form">
    <div class="form-group">
        <label class="control-label col-sm-2" for="id">投稿者ID</label>
        <div class="col-sm-10">
            <%= f.text_field :name ,class: "form-control", placeholder:"投稿者IDを入力する" %>
        </div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-sm-2" for="comment">コメント</label>
        <div class="col-sm-10">
        <%= f.text_area :body ,class: "form-control", size: '60x5', placeholder:"コメントを記入する" %>
        </div>
    </div>
    <div class="form-group"> 
        <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
    </div>
</form>

<% end %>