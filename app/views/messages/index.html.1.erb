<div class="panel panel-default">
  <div class="panel-heading">
    <h2>サービスに関するコメント一覧</h2>
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

  <div class="form-group">
    <%= form_for(@message) do |f| %>
    
      <label for="id">投稿者ID</label><a href="#" style="font-size: 90%"> + 編集</a>
      <%= f.text_field :name ,class: "form-control", placeholder:"投稿者IDを入力する" %>
      <br>

      <label for="comment">コメント</label>
      <%= f.text_area :body ,class:"form-control", rows:"3", placeholder:"コメントを記入する" %>

      
  </div>
  
    <%= f.submit class: "btn btn-sm btn-primary" %>
  <% end %>
